                                    <div class="post"></div>
                                    <form class="form-horizontal" data-_pptype="search" autocomplete="on" name="formYKXL" ng-if="$ctrl.quyenuser.TD && !$ctrl.quyenuser.MocVB && $ctrl.objVB.TrangThai != 2" novalidate>
