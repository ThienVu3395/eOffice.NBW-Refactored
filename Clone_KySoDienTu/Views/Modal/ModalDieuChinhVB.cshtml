
@{
    Layout = null;
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form class="card card-primary card-outline" name="formYKXLNC" novalidate>
                    <div class="card-header pl-3">
                        <h4 class="card-title pt-1"><b>Điều chỉnh văn bản</b></h4>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary btn-sm" data-card-widget="maximize"><i class="fas fa-expand"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12 col-12">
                                <div class="form-group mb-2">
                                    <label ng-class="formadd.sodi.$invalid ? 'mb-1 text-danger' : 'mb-1'">Số văn bản (Số hiện tại: {{$ctrl.thongTinVBHienTai.CodeNumber}})</label>
                                    <input type="text" class="form-control" id="" placeholder="Nhập số đi cần điều chỉnh ..." ng-model="$ctrl.para.CodeNumber" name="sodi" ng-required="true">
                                </div>
                            </div>
                            <div class="col-lg-12 col-12">
                                <div class="form-group mb-2">
                                    <label ng-class="formadd.kyhieu.$invalid ? 'mb-1 text-danger' : 'mb-1'">Số/Ký hiệu (Số/Ký hiệu hiện tại: {{$ctrl.thongTinVBHienTai.FileNotation}})</label>
                                    <input type="text" class="form-control" id="" placeholder="Nhập ký hiệu cần điều chỉnh ..." ng-model="$ctrl.para.FileNotation" name="kyhieu" ng-required="true">
                                </div>
                            </div>
                            <div class="col-lg-12 col-12">
                                <div class="form-group mb-2">
                                    <label ng-class="formadd.ngaybanhanh.$invalid ? 'mb-1 text-danger' : 'mb-1'">Ngày ban hành (Ngày hiện tại: {{$ctrl.thongTinVBHienTai.DueDate | date : 'dd/MM/yyyy'}})</label>
                                    <p class="input-group">
                                        <input type="text" class="form-control" uib-datepicker-popup="dd/MM/yyyy" ng-model="$ctrl.DueDate" is-open="$ctrl.NgayBanHanh.opened" datepicker-options="dateOptions" close-text="Close" ng-click="$ctrl.openNgayBanHanh()" ng-required="true" name="ngaybanhanh" readonly />
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-secondary height-100" ng-click="$ctrl.openNgayBanHanh()">
                                                <i class="fa-svg-icon">
                                                    <svg width="1792" height="1792" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg">
                                                        <path d="M192 1664h288v-288h-288v288zm352 0h320v-288h-320v288zm-352-352h288v-320h-288v320zm352 0h320v-320h-320v320zm-352-384h288v-288h-288v288zm736 736h320v-288h-320v288zm-384-736h320v-288h-320v288zm768 736h288v-288h-288v288zm-384-352h320v-320h-320v320zm-352-864v-288q0-13-9.5-22.5t-22.5-9.5h-64q-13 0-22.5 9.5t-9.5 22.5v288q0 13 9.5 22.5t22.5 9.5h64q13 0 22.5-9.5t9.5-22.5zm736 864h288v-320h-288v320zm-384-384h320v-288h-320v288zm384 0h288v-288h-288v288zm32-480v-288q0-13-9.5-22.5t-22.5-9.5h-64q-13 0-22.5 9.5t-9.5 22.5v288q0 13 9.5 22.5t22.5 9.5h64q13 0 22.5-9.5t9.5-22.5zm384-64v1280q0 52-38 90t-90 38h-1408q-52 0-90-38t-38-90v-1280q0-52 38-90t90-38h128v-96q0-66 47-113t113-47h64q66 0 113 47t47 113v96h384v-96q0-66 47-113t113-47h64q66 0 113 47t47 113v96h128q52 0 90 38t38 90z" />
                                                    </svg>
                                                </i>
                                            </button>
                                        </span>
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-12 col-12">
                                <div class="form-group mb-2">
                                    <label ng-class="formadd.ykienxulync.$invalid ? 'mb-1 text-danger' : 'mb-1'">Lý do điều chỉnh</label>
                                    <input type="text" class="form-control" id="" placeholder="Nhập lý do điều chỉnh ..." ng-model="$ctrl.para.LyDoDieuChinh" name="ykienxulync" ng-required="true">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button ng-click="$ctrl.CapNhatDieuChinhVB(0)"
                                ng-disabled="formYKXLNC.$invalid"
                                type="button"
                                class="btn btn-primary float-right">
                            Cập nhật
                        </button>
                        <button class="btn btn-warning float-left" type="button" ng-click="$ctrl.cancel()"><i class="fa fa-sign-out" title=" Thoát"></i> Thoát</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
