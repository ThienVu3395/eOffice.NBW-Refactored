
@{
    Layout = null;
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form class="card card-primary card-outline" name="formYKXLNC" novalidate>
                    <div class="card-header pl-3">
                        <h4 class="card-title pt-1"><b>Cập nhật ý kiến của phòng,ban</b></h4>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary btn-sm" data-card-widget="maximize"><i class="fas fa-expand"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12 col-12">
                                <div class="form-group">
                                    <label ng-class="formYKXLNC.ykienxulync.$invalid ? 'mb-1 text-danger' : 'mb-1'">Nội dung ý kiến{{formYKXLNC.ykienxulync.$invalid ? '(tối đa 200 từ):' : ':'}}</label>
                                    <textarea style="resize: vertical;"
                                              ng-class="formYKXLNC.yKienPhongBanDoi.$invalid ? 'form-control is-invalid' : 'form-control'"
                                              placeholder="Nhập nội dung ý kiến ..."
                                              ng-model="$ctrl.ykienxulync"
                                              name="ykienxulync"
                                              ng-maxlength="200"
                                              required></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button ng-click="$ctrl.GuiYKienXuLy()"
                                ng-disabled="formYKXLNC.$invalid"
                                type="button"
                                class="btn btn-primary float-right">
                            Gửi Ý Kiến
                        </button>
                        <button class="btn btn-warning float-left" type="button" ng-click="$ctrl.cancel()">Thoát</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
