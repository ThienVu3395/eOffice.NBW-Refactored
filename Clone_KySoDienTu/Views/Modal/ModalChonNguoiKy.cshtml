
@{
    Layout = null;
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-title">
                            <b>Chọn người thực hiện ký số</b>
